<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/input_edit_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_1"
        android:text="@string/box_view"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/blueviolet"
        android:padding="@dimen/padding_10"/>
    <com.taoy3.freight.view.MulSelView
        android:layout_below="@+id/title"
        android:id="@+id/box_type"
        android:numColumns="4"
        android:layout_margin="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/list_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"/>
    <TextView
        android:id="@+id/confirm_box"
        android:clickable="true"
        android:text="@string/confirm"
        android:padding="@dimen/padding_10"
        android:layout_margin="@dimen/margin_10"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:background="@drawable/background_large_blue"
        android:layout_width="@dimen/width_50"
        android:layout_height="@dimen/height_40"/>
</LinearLayout>
